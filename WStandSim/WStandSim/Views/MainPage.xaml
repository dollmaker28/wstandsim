<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WStandSim"
             x:Class="WStandSim.MainPage"
             BackgroundColor="Blue">
    <Label Margin="10" Text="Würstelstand Simulator" VerticalOptions="Center"
           HorizontalOptions="Center" />
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <!--Button für neues Spiel-->
                <!--Button aktivieren und dekaktivieren:-->
                <!--https://forums.xamarin.com/discussion/47857/setting-buttons-isenabled-to-false-does-not-disable-button-->
        <Button Clicked="Button_ClickedNewGame" Margin="60" WidthRequest="200" Text="Neues Spiel" VerticalOptions="Center"
            HorizontalOptions="Center" MinimumWidthRequest="40" BackgroundColor="Black" TextColor="Yellow" />
        <!--Button für Spiel fortsetzen-->
        <Button x:Name="ButtonCont" Clicked="Button_ClickedContinue" Margin="60" WidthRequest="200" Text="Spiel fortsetzen" VerticalOptions="Center"
            HorizontalOptions="Center" BackgroundColor="Black" TextColor="Yellow"/>
        <Image x:Name="hotDogImage" />
    </StackLayout> 
</ContentPage>
